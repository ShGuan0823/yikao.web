<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sg.yikao.dao.LoginDao">
    <select id="getPasswordByName" resultType="java.lang.String" parameterType="java.lang.String" >
        SELECT password FROM sg_yikao_user WHERE username = #{username}
    </select>

    <select id="getSaltByName" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT salt FROM sg_yikao_user WHERE username = #{username}
    </select>
</mapper>