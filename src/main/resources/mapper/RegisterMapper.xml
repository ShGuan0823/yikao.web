<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sg.yikao.dao.RegisterDao">
    <resultMap id="userMap" type="com.sg.yikao.entity.User">
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="username" column="username" jdbcType="VARCHAR" />
        <result property="password" column="password" jdbcType="VARCHAR" />
        <result property="mail" column="mail" jdbcType="VARCHAR" />
        <result property="mobile" column="mobile" jdbcType="VARCHAR" />
        <result property="salt" column="salt" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="RegisterUser" parameterType="com.sg.yikao.entity.User">
        INSERT INTO sg_yikao_user (username, password, mail, mobile, salt) VALUES (#{username}, #{password}, #{mail}, #{mobile}, #{salt})
    </insert>

    <select id="getUser" resultType="java.lang.Integer" parameterType="java.lang.String">
        SELECT * FROM sg_yikao_user WHERE username = #{username}
    </select>
</mapper>